@model IEnumerable<SRI.Models.ViewModels.IncidenteVM>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}




<h2>Crear Incidente</h2>
<hr>


<h4>Seleccione el tipo de incidente</h4>
<div>
    <select id="select-incident" class="form-control col-md-6">

        <option value="IncidenteLlamado">Llamado</option>
        <option value="IncidenteChatWpp">Chat de WhatsApp</option>
        <option value="IncidenteMail">Mail</option>

    </select>
</div>

<div class="col-md-6">
    <button class="btn btn-outline-secondary" onclick="cargarViewTipoIncidente()" type="button">Continuar</button>
</div>

<br />
<br />

<hr />

<h3>Listado de incidentes</h3>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.tipo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_suceso)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fecha_creacion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.emocion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.resolucion)
        </th>
        <th>
            Funcionario
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha_suceso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha_suceso)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fecha_creacion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.emocion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.resolucion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Funcionario.ci)   @Html.DisplayFor(modelItem => item.Funcionario.nombre)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.Id })
            </td>
        </tr>
    }

</table>





@section Scripts{

    <script>


        function cargarViewTipoIncidente() {

            var type = $('select[id=select-incident] option').filter(':selected').val();
            var redirectUrl = "/" + type + "/Create"
            window.location.href = redirectUrl;

        }








    </script>
}